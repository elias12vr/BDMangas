<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Mangas</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #e9ecef; /* Color de fondo suave */
            margin: 0;
            padding: 20px;
        }
        .table-container {
            max-width: 1200px;
            margin: 30px auto;
            background: #ffffff; /* Fondo blanco para la tabla */
            border-radius: 10px; /* Esquinas redondeadas */
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1); /* Sombra */
            overflow: hidden; /* Esquinas redondeadas */
        }
        h1 {
            margin: 20px 0;
            text-align: center;
            color: #343a40; /* Color del título */
            font-weight: 700;
        }
        table {
            margin-bottom: 0; /* Eliminar margen inferior */
        }
        .thead-dark {
            background-color: #007bff; /* Color de fondo azul para el encabezado */
            color: #ffffff; /* Color de texto blanco */
            text-transform: uppercase; /* Texto en mayúsculas */
            letter-spacing: 1px; /* Espaciado entre letras */
        }
        th, td {
            vertical-align: middle; /* Centrar el contenido verticalmente */
            padding: 12px; /* Espaciado interno */
            text-align: center; /* Centrando el texto */
        }
        tr:hover {
            background-color: #f1f1f1; /* Color de fondo al pasar el ratón */
        }
        .btn-custom {
            background-color: #28a745; /* Color de fondo para botones */
            color: white;
        }
        .btn-custom:hover {
            background-color: #218838; /* Color de fondo al pasar el ratón */
        }
        .btn-secondary {
            background-color: #007bff; /* Color de fondo azul para el botón secundario */
            color: white;
        }
        .btn-secondary:hover {
            background-color: #0056b3; /* Color de fondo al pasar el ratón */
        }
        .btn-danger {
            background-color: #dc3545; /* Color de fondo rojo para el botón de eliminar */
            color: white;
        }
        .btn-danger:hover {
            background-color: #c82333; /* Color de fondo al pasar el ratón */
        }
    </style>
</head>
<body>
    <div class="container table-container">
        <h1>Lista de Mangas</h1>
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>ID Manga</th>
                    <th>Nombre del Manga</th>
                    <th>Autor</th>
                    <th>Género</th>
                    <th>Precio</th>
                    <th>Disponibilidad</th>
                    <th>Acciones</th> <!-- Columna para acciones -->
                </tr>
            </thead>
            <tbody>
                <% mangas.forEach(function(manga) { %>
                    <tr>
                        <td><%= manga.idmanga %></td>
                        <td><%= manga.NomManga %></td>
                        <td><%= manga.Autor %></td>
                        <td><%= manga.Genero %></td>
                        <td><%= manga.Precio.toFixed(2) %> €</td> <!-- Formatear el precio -->
                        <td><%= manga.Disponibilidad %></td>
                        <td>
                            <button class="btn btn-custom btn-sm">Ver Detalles</button> <!-- Botón de acción -->
                            <button class="btn btn-secondary btn-sm">Editar</button> <!-- Botón de acción -->
                            <button class="btn btn-danger btn-sm">Eliminar</button> <!-- Botón de acción -->
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <!-- Bootstrap JS (opcional, pero recomendado para algunas funcionalidades) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
