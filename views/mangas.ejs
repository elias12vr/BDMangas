<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Mangas</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #e9ecef; /* Color de fondo suave */
            margin: 0;
            padding: 20px;
        }
        .table-container {
            max-width: 1200px;
            margin: 30px auto;
            background: #ffffff; /* Fondo blanco para la tabla */
            border-radius: 10px; /* Esquinas redondeadas */
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1); /* Sombra */
            overflow: hidden; /* Esquinas redondeadas */
            border: 1px solid #007bff; /* Borde azul */
        }
        h1 {
            margin: 20px 0;
            text-align: center;
            color: #007bff; /* Color del título */
            font-weight: 700;
        }
        table {
            margin-bottom: 0; /* Eliminar margen inferior */
        }
        .thead-custom {
            background-color: #007bff; /* Color de fondo azul para el encabezado */
            color: #ffffff; /* Color de texto blanco */
            text-transform: uppercase; /* Texto en mayúsculas */
            letter-spacing: 1px; /* Espaciado entre letras */
        }
        th, td {
            vertical-align: middle; /* Centrar el contenido verticalmente */
            padding: 12px; /* Espaciado interno */
            text-align: center; /* Centrando el texto */
        }
        tr:hover {
            background-color: #f1f1f1; /* Color de fondo al pasar el ratón */
        }
        /* Estilo para filas de mangas */
        .manga-row {
            transition: transform 0.2s; /* Animación suave */
        }
        .manga-row:hover {
            transform: scale(1.02); /* Efecto de escalado al pasar el ratón */
            background-color: #e2e6ea; /* Color de fondo más claro */
        }
        /* Estilo para la disponibilidad */
        .disponible {
            color: #28a745; /* Color verde para disponibilidad */
            font-weight: bold;
        }
        .no-disponible {
            color: #dc3545; /* Color rojo para no disponible */
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="container table-container">
        <h1>Lista de Mangas</h1>
        <table class="table table-striped table-hover">
            <thead class="thead-custom">
                <tr>
                    <th>ID Manga</th>
                    <th>Nombre del Manga</th>
                    <th>Autor</th>
                    <th>Género</th>
                    <th>Precio</th>
                    <th>Disponibilidad</th>
                </tr>
            </thead>
            <tbody>
                <% mangas.forEach(function(manga) { %>
                    <tr class="manga-row">
                        <td><%= manga.idmanga %></td>
                        <td><%= manga.NomManga %></td>
                        <td><%= manga.Autor %></td>
                        <td><%= manga.Genero %></td>
                        <td><%= manga.Precio.toFixed(2) %> €</td> <!-- Formatear el precio -->
                        <td class="<%= manga.Disponibilidad === 'Disponible' ? 'disponible' : 'no-disponible' %>">
                            <%= manga.Disponibilidad %>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <!-- Bootstrap JS (opcional, pero recomendado para algunas funcionalidades) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
